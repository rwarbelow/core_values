<div class="login">

	<div class='text-center'>
		<div class="jumbotron">
			<h6><span class="glyphicon glyphicon-ok"></span> Respect. &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span class="glyphicon glyphicon-ok"></span> Integrity. &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-ok"></span> Perseverance. &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-ok"></span> Passion. &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-ok"></span> Empowerment. &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-ok"></span> Team.</h6>
			<h1>Core Values Tracker</h1>
			<%= image_tag("swot_logo.png", size: "150x150") %>
		</div>

		<br>
		<%= form_tag sessions_path do %>
		<div class="login-inputs text-center">
			<%= text_field_tag :username, nil, placeholder: "username", class: 'form-control' %> <br>
			<%= password_field_tag :password, nil, placeholder: "password", class: 'form-control'  %> <br>

			<%= submit_tag "Log In", :class => "btn btn-lg" %>
		</div>
		<% end %>
	</div>
</div>
